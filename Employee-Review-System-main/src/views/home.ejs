<!-- Home page which consists signin and signin form -->
<!-- Style for this specific page -->
<style>
  body {
    background: #007bff;
    background: linear-gradient(
      to right,
      hsl(214, 100%, 45%, 0.8),
      hsl(204, 100%, 60%, 0.6)
    );
  }

  .container {
    margin-top: 100px;
  }

  .form-control {
    border-radius: 8px;
  }

  .btn-primary {
    border-radius: 8px;
    width: 100%;
  }

  .card-header {
    background-color: #007bff;
    color: white;
    text-align: center;
    border-radius: 15px 15px 0 0;
  }

  h3 {
    margin-bottom: 0;
  }

  .card {
    border: none;
    border-radius: 1rem;
    transition: all 0.2s;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  }

  .card:hover {
    transform: translateY(-10px);
  }

  #toggleSignIn {
    text-decoration: none;
  }

  #toggleSignIn:hover {
    text-decoration: underline;
  }

  #toggleSignUp {
    text-decoration: none;
  }

  #toggleSignUp:hover {
    text-decoration: underline;
  }
</style>
<!--  -->
<!-- Form code -->
<div class="container">
  <!-- Notifications -->
  <% if (notification) { %>
  <div
    id="notification"
    class="alert alert-success alert-dismissible fade show m-2"
    role="alert"
  >
    <%= notification %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>

  <script>
    // Auto dismiss the alert after 5 seconds
    setTimeout(function () {
      const alert = document.getElementById("notification");
      const bsAlert = new bootstrap.Alert(alert);
      bsAlert.close();
    }, 5000);
  </script>
  <% } %>
  <!--  -->

  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Sign in card -->
      <div class="card shadow" id="signInCard">
        <div class="card-header">
          <h3>Sign In</h3>
        </div>
        <div class="card-body">
          <form action="/api/employee/signin" method="post">
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                name="email"
                type="email"
                class="form-control"
                id="signInEmail"
                aria-describedby="signInEmailHelp"
                required
              />
              <div id="signInEmailHelp" class="form-text">
                We'll never share your email with anyone else.
              </div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                name="password"
                type="password"
                class="form-control"
                id="signInPassword"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Sign In</button>
          </form>
        </div>
        <div class="card-footer text-center">
          <p class="mb-0">
            Don't have an account?
            <a href="#" id="toggleSignUp" class="text-primary">Sign Up</a>
          </p>
        </div>
      </div>
      <!-- Sign in card ends here -->

      <!-- Sign up card initially hidden -->
      <div class="card shadow" id="signupCard" style="display: none">
        <div class="card-header">
          <h3>Sign Up</h3>
        </div>
        <div class="card-body">
          <form action="/api/employee/signup" method="post">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                name="name"
                type="text"
                class="form-control"
                id="signUpName"
                required
              />
            </div>
            <div class="mb-3">
              <label for="emailSignup" class="form-label">Email address</label>
              <input
                name="email"
                type="email"
                class="form-control"
                id="signUpEmail"
                aria-describedby="signUpEmailHelp"
                required
              />
              <div id="signUpEmailHelp" class="form-text">
                We'll never share your email with anyone else.
              </div>
            </div>
            <div class="mb-3">
              <label for="passwordSignup" class="form-label">Password</label>
              <input
                name="password"
                type="password"
                class="form-control"
                id="signUpPassword"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </form>
        </div>
        <div class="card-footer text-center">
          <p class="mb-0">
            Already have an account?
            <a href="#" id="toggleSignIn" class="text-primary">Sign In</a>
          </p>
        </div>
      </div>
      <!-- Sign up card ends here -->
    </div>
  </div>
</div>
<!--  -->

<!-- Script to switch signin and signup forms -->
<script>
  const signInCard = document.querySelector("#signInCard");
  const signUpCard = document.querySelector("#signupCard");
  const toggleSignUp = document.querySelector("#toggleSignUp");
  const toggleSignIn = document.querySelector("#toggleSignIn");

  toggleSignUp.addEventListener("click", () => {
    signInCard.style.display = "none";
    signUpCard.style.display = "block";
  });

  toggleSignIn.addEventListener("click", () => {
    signUpCard.style.display = "none";
    signInCard.style.display = "block";
  });
</script>
